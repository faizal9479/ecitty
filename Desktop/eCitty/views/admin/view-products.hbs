<section>
  <div class="container col-12">
    

     <table class="table table-striped table-dark mt-3">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Titile</th>
          <th scope="col">Category</th>
          <th scope="col">Discription</th>
          <th scope="col">price</th>
          <th>image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>{{this.Discription}}</td>
          <td>{{this.Price}}</td>
          <td><img style="width: 50px;height:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-danger">edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Are you want to delete {{this.Name}}?')">DELETE</a>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>