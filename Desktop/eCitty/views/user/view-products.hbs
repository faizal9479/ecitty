    <div class="container mt-5">
        <div class="row">    
  {{#each products}}
            <div class="col-md-3 p-3">
 <div class="card" style="width: 250px; height:430px; P-2">
                    <img src="/product-images/{{this._id}}.jpg" style="width: 200px; height:200px;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <h5 class="card-rate mt-0">{{this.Category}}</h5>
                        <p class="card-discription mt-0">{{this.Discription}}</p>
                        <p class="card-discription mt-0 ">{{this.Price}}</p>
                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">add to cart</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>